<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_register_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_fname_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ractangle_border"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint="First Name"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_name_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/ractangle_border"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint="Name"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_email_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/ractangle_border"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint="Email"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_password_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/ractangle_border"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#000000"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/sp_country_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/ractangle_border"
                android:paddingLeft="15dp" />

            <EditText
                android:id="@+id/et_city_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/ractangle_border"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint="City"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#000000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="2">


                <RadioGroup
                    android:id="@+id/rg_group_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_person_register"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="Person"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb_foundation_register"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Foundation"
                        android:textSize="14sp" />
                </RadioGroup>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:text="By clicking on the register button, you Agree to the Terms of Uses BGenerous."
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_registerClick_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/buttonshape_blue"
                android:text="Register"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_allReadyAccount_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="I HAVE ALREADY AN ACCOUNT"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>