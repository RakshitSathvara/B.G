<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/myRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ractangle_shap"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_donation"
                style="@style/MyAppTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:checked="true"
                android:text="Donation(money)"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rb_otherDonation"
                style="@style/MyAppTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Others donations"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/myRadioGroup_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/ractangle_shap"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio11"
                style="@style/MyAppTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="10\u0024"
                android:textColor="@color/dark_gray"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/radio22"
                style="@style/MyAppTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="20\u0024"
                android:textColor="@color/dark_gray"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/radio33"
                style="@style/MyAppTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="50\u0024"
                android:textColor="@color/dark_gray"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/radio44"
                style="@style/MyAppTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="100\u0024"
                android:textColor="@color/dark_gray"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/radio55"
                style="@style/MyAppTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="other"
                android:textColor="@color/dark_gray"
                android:textSize="10sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0.5"
                android:background="@drawable/ractangle_shap"
                android:gravity="center"
                android:text="..."
                android:textSize="12sp" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/myRadioGroup3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/ractangle_shap"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio111"
                style="@style/MyAppTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Particular donation"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radio222"
                style="@style/MyAppTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Donation in the name of an organization"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />
        </RadioGroup>

        <TextView
            style="@style/MyAppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/ractangle_shap"
            android:padding="8dp"
            android:text="Organization"
            android:textColor="@color/dark_gray"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/MyAppTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/ractangle_shap"
                android:padding="8dp"
                android:text="Phone"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />

            <TextView
                style="@style/MyAppTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/ractangle_shap"
                android:padding="8dp"
                android:text="postal Code"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/bb" />

            <TextView
                style="@style/MyAppTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:background="@drawable/ractangle_shap"
                android:padding="8dp"
                android:text="Address"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_person_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/ractangle_shap"
                android:gravity="center"
                android:padding="8dp">

                <Spinner
                    android:id="@+id/sp_type_dona"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/dark_gray" />

            </LinearLayout>


            <TextView
                style="@style/MyAppTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/ractangle_shap"
                android:padding="8dp"
                android:text="*Numbers"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_estimated_value_donation"
            style="@style/MyAppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/ractangle_shap"
            android:padding="8dp"
            android:text="Estimated Values of donations"
            android:textColor="@color/dark_gray"
            android:textSize="12sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/ractangle_shap"
            android:gravity="center"
            android:padding="8dp">

            <Spinner
                android:id="@+id/sp_method_recuputation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/dark_gray" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/bb" />

            <TextView
                style="@style/MyAppTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="7"
                android:text="@string/abc"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_terms"
            style="@style/MyAppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/ractangle_shap"
            android:padding="8dp"
            android:text="@string/give_donation"
            android:textColor="@color/dark_gray"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_give_donation_campaign_people"
            style="@style/MyAppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonshape_blue"
            android:text="Give Donation"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>
</ScrollView>